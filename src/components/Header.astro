<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 1000;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text-color);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1400px;
		margin: 0 auto;
		padding: 1em 0;
	}
	nav a {
		padding: 0.5em 1em;
		color: var(--text-color);
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
	}
	nav a:hover {
		color: var(--primary-color);
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--primary-color);
		color: var(--primary-color);
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}
	.social-links a {
		padding: 0.5em;
		transition: transform 0.3s ease;
	}
	.social-links a:hover {
		transform: translateY(-2px);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		nav {
			padding: 0.5em 0;
		}
	}
</style>
